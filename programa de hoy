#include <iostream>
#include <stdlib.h>
using namespace std;
 
struct nodo{
       int numero;        
       struct nodo *next;
};
 
typedef struct nodo *NODO;
 
void insertarFinal(NODO &lista, int valor)
{
    NODO t, q = new(struct nodo);
 
    q->numero  = valor;
    q->next = NULL;
 
    if(lista==NULL)
    {
        lista = q;
    }
    else
    {
        t = lista;
        while(t->next!=NULL)
        {
            t = t->next;
        }
        t->next = q;
    }
 
}
 
void reportarLista(NODO lista)
{
     int i = 0;
 
     while(lista != NULL)
     {
          cout <<' '<< i+1 <<") " << lista->numero << endl;
          lista = lista->next;
          i++;
     }
}
 
 
void eliminarElemento(NODO &lista, int valor)
{
    NODO p, ant;
    p = lista;
 
    if(lista!=NULL)
    {
        while(p!=NULL)
        {
            if(p->numero==valor)
            {
                if(p==lista)
                    lista = lista->next;
                else
                    ant->next = p->next;
 
                delete(p);
                return;
            }
            ant = p;
            p = p->next;
        }
    }
    else
        cout<<" Lista vacia..!";
}
 
void menu1()
{
    cout<<"\n\t\NODO ENLAZADA SIMPLE\n\n";
    cout<<" 1. INSERTAR AL FINAL                "<<endl;
    cout<<" 2. REPORTAR LISTA                   "<<endl;
    cout<<" 3. ELIMINAR ELEMENTO 'V'            "<<endl;
    cout<<"\n INGRESE opcionCION: ";
}
 
 
int main()
{
    NODO lista = NULL;
    int opcion;     
    int _dato; 
    int pos;    
 
    do
    {
    
	cout<<"\n\t\t ----------------MENU-----------------------\n\n";
    cout<<" 1. INSERTAR AL FINAL"<<endl;
    cout<<" 2. REPORTAR LISTA"<<endl;
    cout<<" 3. ELIMINAR ELEMENTO"<<endl;
    cout<<"\n INGRESE OPCION: "<<endl;  
	
	cin>> opcion;
 
        switch(opcion)
        {
            case 1:
 
                 cout<< "\n NUMERO A INSERTAR: "; cin>> _dato;
                 insertarFinal(lista, _dato );
            break;
 
            case 2:
 
                 cout << "\n\n MOSTRANDO LISTA\n\n";
                 reportarLista(lista);
            break;
 
            case 3:
 
                cout<<"\n Valor a eliminar: "<<endl; 
				cin>> _dato;
 
                eliminarElemento(lista, _dato);
            break;
                    }
    }while(opcion!=8);
}
